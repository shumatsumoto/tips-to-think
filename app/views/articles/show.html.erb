<div class="d-flex align-items-center mt-4 mb-4">
  <div class="ml-auto articles__linkBox">
    <%= link_to '記事一覧', articles_path, class: 'btn btn-outline-dark' %>
    <% if @article.name == @current_user.name %>
      <%= link_to '編集', edit_article_path(@article), class: 'btn btn-outline-dark' %>
    <% end %>
  </div>
</div>

<% if flash[:notice] %>
  <div class="alert alert-primary">
    <%= flash[:notice] %>
  </div>
<% end %>

<%= render @article %>

<% if Like.find_by(user_id: @current_user.id, article_id: @article.id) %>
  <%= link_to 'いいね！済み', like_destroy_path(@article), method: :post %>
<% else %>
  <%= link_to 'いいね！', like_create_path(@article), method: :post %>
<% end %>

<div class="mt-3">
  いいね数：<%= @likes_count %>
</div>

<div class="p-comment__list">
  <div class="p-commment_listTitle">コメント</div>
  <%= render @article.comments %>
</div>

<%= render partial: 'comments/form', locals: { comment: @comment } %>
